<plot name="Total Energy" title="Total Deposited Energy" xlabel="Energy(keV)" ylabel="Counts" logscale="true" save="${DIR_PLOT}/Etot${label}.root" value="OFF" >
    <variable name="g4Ana_totalEdep" range="(0,2000)" nbins="200"/>
</plot>


